{
  "compilerOptions": {
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "module": "CommonJS"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
